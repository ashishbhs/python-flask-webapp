import org.apache.pdfbox.pdmodel.PDDocument;
import org.apache.pdfbox.text.PDFTextStripper;
import org.apache.pdfbox.pdmodel.interactive.form.PDAcroForm;
import org.apache.pdfbox.pdmodel.interactive.form.PDField;
import java.io.File;
import java.io.IOException;

public class ExtractPDFContent {
    public static void main(String[] args) {
        // Specify the path to your PDF file
        String pdfFilePath = "path/to/your/form.pdf"; // Replace with your PDF file path

        try {
            // Load the PDF document
            File file = new File(pdfFilePath);
            PDDocument document = PDDocument.load(file);

            // Extract text content from the PDF
            extractTextContent(document);

            // Extract form field data
            extractFormFields(document);

            // Close the document
            document.close();
        } catch (IOException e) {
            System.err.println("Error processing PDF: " + e.getMessage());
        }
    }

    // Method to extract text content from the PDF
    private static void extractTextContent(PDDocument document) throws IOException {
        System.out.println("=== Extracted Text Content ===");
        PDFTextStripper textStripper = new PDFTextStripper();
        String text = textStripper.getText(document);
        System.out.println(text);
    }

    // Method to extract form field data
    private static void extractFormFields(PDDocument document) throws IOException {
        System.out.println("=== Extracted Form Field Data ===");
        PDAcroForm acroForm = document.getDocumentCatalog().getAcroForm();
        
        if (acroForm != null) {
            for (PDField field : acroForm.getFields()) {
                String fieldName = field.getFullyQualifiedName();
                String fieldValue = field.getValueAsString();
                String fieldType = field.getFieldType();
                
                System.out.printf("Field Name: %s, Type: %s, Value: %s%n", 
                    fieldName, fieldType, fieldValue);
            }
        } else {
            System.out.println("No form fields found in the PDF.");
        }
    }
}
